<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_2.xsd"
	version="2.2">
	<persistence-unit name="db" transaction-type="JTA">
		
		<jta-data-source>java:jboss/datasources/MosyDS</jta-data-source>
		
		<!-- Klassen -->
		<class>com.github.joergdev.mosy.backend.persistence.model.GlobalConfig</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.Interface</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.InterfaceMethod</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.InterfaceType</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.MockData</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.MockSession</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.Record</class>
		<class>com.github.joergdev.mosy.backend.persistence.model.RecordConfig</class>

		<properties>

			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.id.new_generator_mappings" value="false"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			
			<property name="jboss.entity.manager.jndi.name" value="java:/mosy/entityManager"/>

		</properties>

	</persistence-unit>

</persistence>